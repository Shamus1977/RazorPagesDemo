@page
@model RazorPagesDemo.Pages.Categories.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4" style="max-width:700px">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary" ><i class="bi bi-plus-lg"></i>&nbsp; Create Category</a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%; max-width:600px">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Categories)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>