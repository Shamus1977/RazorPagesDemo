@page
@model RazorPagesDemo.Pages.Categories.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4" style="max-width:400px">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary" ><i class="bi bi-plus-lg"></i>&nbsp; Create Category</a>
        </div>
    </div>
    <br /><br />
    <table class="table table-primary table-striped" style="width:100%; max-width:400px; border:solid white 1px;">
        <thead>
            <tr style=" border-bottom:solid white 1px;>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Categories)
            {
                <tr style=" border-bottom:solid white 1px;">
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <a href="/Categories/Edit?id=@obj.Id" class="btn btn-secondary mx-2" ><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                        <a href="/Categories/Delete?id=@obj.Id" class="btn btn-danger mx-2" ><i class="bi bi-x-circle"></i>&nbsp; Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>